@model AEM_Enersol_Assessment.Models.Platform
@inject AEM_Enersol_Assessment.Data.AEMContext Context
@{
    ViewData["Title"] = "Menu Page";
    List<Platform> platforms = Context.Platform.ToList();
    List<Well> wells = Context.Well.ToList();
}

    <div class="container">


        
        <div class="row">
            <form asp-action="GetPlatfromWellActual" asp-controller="Home">
                <button type="submit" class="btn btn-info">GetPlatfromWellActual</button>
            </form>
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <form asp-action="GetPlatfromWellDummy" asp-controller="Home">
                <button type="submit" class="btn btn-info">GetPlatfromWellDummy</button>
            </form>
        </div>
        
        <div class="row">
            @if (TempData["Failed"] != null)
            {
                <p class="alert alert-danger" id="failMessage">@TempData["Failed"]</p>
            }
        </div>

        <br><br>
        <div class="row">
            <h2>Platforms</h2>
        </div>
        <div class="row">
            <div class="col-md-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Unique Name</th>
                            <th>Latitude</th>
                            <th>Longitude</th>
                            <th>Created At</th>
                            <th>Updated At</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in platforms)
                        {
                            <tr>
                                <td>@item.UniqueName</td>
                                <td>@item.Latitude</td>
                                <td>@item.Longitude</td>
                                <td>@item.CreatedAt</td>
                                <td>@item.UpdatedAt</td>
                            </tr>
                        }

                    </tbody>
                </table>

            </div>
        </div>
        <br><br>
        <div class="row">
            <h2>Wells</h2>
        </div>
        <div class="row">
            <div class="col-md-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Platform ID</th>
                            <th>Unique Name</th>
                            <th>Latitude</th>
                            <th>Longitude</th>
                            <th>Created At</th>
                            <th>Updated At</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in wells)
                        {
                            <tr>
                                <td>@item.PlatformID</td>
                                <td>@item.UniqueName</td>
                                <td>@item.Latitude</td>
                                <td>@item.Longitude</td>
                                <td>@item.CreatedAt</td>
                                <td>@item.UpdatedAt</td>
                            </tr>
                        }

                    </tbody>
                </table>

            </div>
        </div>
    </div>

